<div class="container">
      <div class="row">
            <div class="col-lg-12">
                  <h2>Sửa Khóa Học</h2>

                  <form method="POST" action="/course/{{course._id}}?_method=PUT">
                        <div class="mb-3">
                              <label for="name" class="form-label">Tên Khóa Học</label>
                              <input type="text" name="name" value='{{course.name}}' class="form-control" id="name">
                        </div>

                        <div class="mb-3">
                              <label for="description" class="form-label">Mô tả</label>
                              <input type="text" name="description" value='{{course.description}}' class="form-control" id="description">
                        </div>

                        <div class="mb-3">
                              <label for="videoID" class="form-label">Video ID</label>
                              <input type="text" name="videoID" value='{{course.videoID}}' class="form-control" id="videoID">
                        </div>

                        <div class="mb-3">
                              <label for="image" class="form-label">Image</label>
                              <input type="text" name="image" value='{{course.image}}' class="form-control" id="image">
                        </div>

                        <button type="submit" class="btn btn-primary">Sửa khóa học</button>
                  </form>
            </div>
      </div>
</div>